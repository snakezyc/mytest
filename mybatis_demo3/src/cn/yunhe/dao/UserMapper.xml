<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yunhe.dao.UserMapper">

    <sql id="seletUser">
        SELECT id,username,address FROM user
    </sql>

    <select id="getUsersBySexAndUserName" resultType="User">
        SELECT * FROM user WHERE 1=1
        <if test="name!=null and name!=''">
           AND username LIKE CONCAT('%',#{name},'%')
        </if>
        <if test="sex!=null and sex!=''">
           AND sex = #{sex}
        </if>
    </select>

    <!--where标签可以智能的忽略AND-->
    <select id="getUsersByParams" resultType="User">
         SELECT * FROM user
         <where>
             <if test="username!=null and username!=''">
                 AND username LIKE CONCAT('%',#{username},'%')
             </if>
             <if test="sex!=null and sex!=''">
                 AND sex = #{sex}
             </if>
         </where>
    </select>

    <!--set标签:智能的忽略逗号-->
    <!--where一定要写到set标签的外部！！！-->
    <update id="update" parameterType="User">
        UPDATE user
        <set>
            <if test="username!=null and username!=''">
                username=#{username},
            </if>
            <if test="birthday!=null">
                birthday=#{birthday},
            </if>
            <if test="sex!=null and sex!=''">
                sex=#{sex},
            </if>
            <if test="address!=null and address!=''">
                address=#{address},
            </if>
        </set>
          WHERE id=#{id}
    </update>

    <!--trim:prefix前缀拼接;suffix后缀拼接;suffixOverrides后缀智能忽略;prefixOverrides前缀智能忽略-->
    <insert id="save" parameterType="User">
        INSERT INTO user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username!=null and username!=''">
                username,
            </if>
            <if test="birthday!=null">
                birthday,
            </if>
            <if test="sex!=null and sex!=''">
                sex,
            </if>
            <if test="address!=null and address!=''">
                address,
            </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username!=null and username!=''">
                #{username},
            </if>
            <if test="birthday!=null">
                #{birthday},
            </if>
            <if test="sex!=null and sex!=''">
                #{sex},
            </if>
            <if test="address!=null and address!=''">
                #{address},
            </if>
        </trim>
    </insert>

    <select id="getUsersBySexAndUserName2" resultType="User">
        SELECT * FROM user
        <trim prefix="where" prefixOverrides="AND">
            <if test="name!=null and name!=''">
                AND username LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="sex!=null and sex!=''">
                AND sex = #{sex}
            </if>
        </trim>
    </select>
    
    
    <select id="getUsersByIds" parameterType="List" resultType="User">
        SELECT * FROM `user` WHERE id IN
        <foreach collection="list" item="uid" open="(" separator="," close=")">
            #{uid}
        </foreach>
    </select>


    <select id="getUsersByIds2" parameterType="int" resultType="User">
        SELECT * FROM `user` WHERE id IN
        <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>

    <select id="getUsersByIds3" parameterType="QueryVo" resultType="User">
        SELECT * FROM `user` WHERE id IN
        <foreach collection="ids" open="(" close=")" separator="," item="uid">
            #{uid}
        </foreach>
    </select>

    <select id="getUsersByIds4" parameterType="Map" resultType="User">
        <include refid="seletUser" />
        WHERE sex=#{sex} AND id IN
        <foreach collection="ids" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>
</mapper>
